<h3> Educations </h3>

<table class="table table-hover table-striped table-bordered">
   <thead class="thead-dark">
    <tr>
      <th scope="col">Year</th>
      <th scope="col">Institution</th>
      <th scope="col">Achievement</th>
      <th /th>
      <th /th>
    </tr>
  </thead>

  <tbody>

    <% @user.educations.each do |education| %>
      <tr>
        <td><%= education.year %></td>
        <td><%= education.institution %></td>
        <td><%= education.achievement %></td>
        <td><%= link_to 'Edit', edit_education_path(education) %></td>
        <td><%= link_to 'Delete', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add', new_education_path %>

